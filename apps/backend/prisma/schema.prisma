generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  passwordHash String
  email        String   @unique
  githubToken  String?
}

model Container {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  dockerId     String?
  image        String?
  dockerName   String
  dockerState  String?
  doesExist    Boolean       @default(false)
  portForwards PortForward[]
}

model PortForward {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  hostPort      String
  containerPort String
  container     Container @relation(fields: [dbContainerId], references: [id])
  dbContainerId   Int
}
